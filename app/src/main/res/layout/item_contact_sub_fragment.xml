<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemContactSubFragmentConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="8dp"
    android:paddingRight="16dp"
    android:paddingBottom="8dp"
    android:background="?attr/selectableItemBackground">

    <TextView
        android:maxLines="1"
        android:ellipsize="end"
        android:scrollHorizontally="true"
        tools:text="a very long name abcxyz0123456789"
        android:id="@+id/nameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="@id/avatarImgView"
        app:layout_constraintEnd_toStartOf="@id/voiceCallImgView"
        app:layout_constraintStart_toEndOf="@id/avatarImgView"
        app:layout_constraintTop_toTopOf="@id/avatarImgView" />

    <de.hdodenhof.circleimageview.CircleImageView
        app:civ_circle_background_color="@android:color/white"
        tools:src="@drawable/official_account"
        android:id="@+id/avatarImgView"
        android:layout_width="@dimen/size_room_item_avatar_48dp"
        android:layout_height="0dp"
        android:contentDescription="@string/description_avatar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:background="?attr/selectableItemBackgroundBorderless"
        android:id="@+id/voiceCallImgView"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:clickable="true"
        android:contentDescription="@string/description_voice_call"
        android:focusable="true"
        android:padding="8dp"
        android:src="@drawable/call"
        app:layout_constraintBottom_toBottomOf="@id/nameTextView"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintEnd_toStartOf="@id/videoCallImgView"
        app:layout_constraintTop_toTopOf="@id/nameTextView" />

    <ImageView
        android:background="?attr/selectableItemBackgroundBorderless"
        android:id="@+id/videoCallImgView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:contentDescription="@string/description_video_call"
        android:focusable="true"
        android:padding="8dp"
        android:src="@drawable/video"
        app:layout_constraintBottom_toBottomOf="@id/voiceCallImgView"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/voiceCallImgView" />

</androidx.constraintlayout.widget.ConstraintLayout>