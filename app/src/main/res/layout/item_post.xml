<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatarImgView"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/descTextView"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginBottom="8dp"
        tools:src="@drawable/official_account" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:scrollHorizontally="true"
        android:textSize="@dimen/sizeTextBig"
        android:textStyle="bold"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@id/avatarImgView"
        app:layout_constraintEnd_toStartOf="@id/dot"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/avatarImgView"
        app:layout_constraintTop_toTopOf="@id/avatarImgView"
        tools:text="Tai Thanasdsadasdsadsadsadsasdadsasdsdsdaasdsaasdasd" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/dot"
        android:layout_width="3dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="4dp"
        android:src="@color/strongGray"
        app:layout_constraintBottom_toBottomOf="@id/timeTextView"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/timeTextView"
        app:layout_constraintStart_toEndOf="@id/nameTextView" />

    <TextView
        app:layout_constraintTop_toTopOf="@id/nameTextView"
        android:id="@+id/timeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="@id/nameTextView"
        app:layout_constraintEnd_toStartOf="@id/moreImgView"
        app:layout_constraintStart_toEndOf="@id/dot"
        tools:text="12 mins" />

    <ImageView
        android:id="@+id/moreImgView"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="12dp"
        android:rotation="90"
        android:src="@drawable/more"
        app:layout_constraintBottom_toBottomOf="@id/avatarImgView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/avatarImgView" />

    <TextView
        android:id="@+id/descTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:autoLink="web"
        android:ellipsize="end"
        android:maxLines="12"
        android:scrollHorizontally="true"
        android:textSize="@dimen/sizeTextBig"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/avatarImgView"
        tools:text="it's a beautiful day don't you think so you little piee of shit!!!\nokay it is"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/playerView"
        app:layout_constraintDimensionRatio="10:12"
        app:layout_constraintTop_toBottomOf="@id/descTextView"
        tools:layout_height="100dp"
        tools:src="@drawable/zalo"
        tools:visibility="visible" />

    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/playerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/emojiImgView"
        app:layout_constraintHeight_max="500dp"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:surface_type="texture_view"
        tools:layout_height="150dp"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/emojiImgView"
        android:layout_width="36dp"
        android:layout_height="0dp"
        android:layout_marginEnd="4dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        android:src="@drawable/heart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/playerView" />

    <ImageView
        android:id="@+id/commentImgView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        android:src="@drawable/comment"
        app:layout_constraintBottom_toBottomOf="@id/emojiImgView"
        app:layout_constraintDimensionRatio="W,1:1"
        app:layout_constraintEnd_toStartOf="@id/emojiNumTextView"
        app:layout_constraintTop_toTopOf="@id/emojiImgView" />

    <ImageView
        android:id="@+id/shareImgView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        android:src="@drawable/share2"
        app:layout_constraintBottom_toBottomOf="@id/emojiImgView"
        app:layout_constraintDimensionRatio="W,1:1"
        app:layout_constraintEnd_toStartOf="@id/commentNumTextView"
        app:layout_constraintTop_toTopOf="@id/emojiImgView" />

    <TextView
        android:id="@+id/shareNumTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_gray_bg"
        app:layout_constraintBottom_toBottomOf="@id/shareImgView"
        app:layout_constraintEnd_toStartOf="@id/shareImgView"
        app:layout_constraintTop_toTopOf="@id/shareImgView"
        tools:text="1.1k" />

    <TextView
        android:id="@+id/commentNumTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_gray_bg"
        app:layout_constraintBottom_toBottomOf="@id/shareImgView"
        app:layout_constraintEnd_toStartOf="@id/commentImgView"
        app:layout_constraintTop_toTopOf="@id/shareImgView"
        tools:text="1.1k" />

    <TextView
        android:id="@+id/emojiNumTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_gray_bg"
        app:layout_constraintBottom_toBottomOf="@id/shareImgView"
        app:layout_constraintEnd_toStartOf="@id/emojiImgView"
        app:layout_constraintTop_toTopOf="@id/shareImgView"
        tools:text="1.1k" />
</androidx.constraintlayout.widget.ConstraintLayout>