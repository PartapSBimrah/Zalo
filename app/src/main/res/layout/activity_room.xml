<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:id="@+id/rootView"
    android:focusableInTouchMode="true"
    tools:context=".views.activities.RoomActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"/>

    <androidx.recyclerview.widget.RecyclerView
        android:paddingBottom="@dimen/size_medium_16dp"
        android:paddingTop="@dimen/size_medium_16dp"
        android:clipToPadding="false"
        android:background="@drawable/chat_default_bg"
        android:layout_weight="1"
        app:reverseLayout="true"
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:nextFocusUp="@id/msgEditText"
                android:nextFocusLeft="@id/msgEditText"
                android:background="@null"
                android:id="@+id/msgEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/hint_message"
                android:imeOptions="actionSend"
                android:inputType="text"
                app:layout_constraintBottom_toBottomOf="@id/emojiImgView"
                app:layout_constraintLeft_toRightOf="@id/emojiImgView"
                app:layout_constraintRight_toLeftOf="@id/uploadFileImgView"
                app:layout_constraintTop_toTopOf="@id/emojiImgView" />

            <ImageView
                android:background="?android:attr/selectableItemBackground"
                android:id="@+id/emojiImgView"
                android:layout_width="@dimen/size_huge_48dp"
                android:layout_height="0dp"
                android:contentDescription="@string/description_emoji_icon"
                android:padding="@dimen/size_small_8dp"
                android:src="@drawable/emoji"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="h,1:1"
                app:layout_constraintLeft_toLeftOf="parent" />

            <ImageView
                android:background="?android:attr/selectableItemBackground"
                android:id="@+id/pictureImgView"
                android:layout_width="36dp"
                android:layout_height="0dp"
                android:contentDescription="@string/description_attach_picture_icon"
                android:paddingLeft="6dp"
                android:paddingTop="12dp"
                android:paddingRight="6dp"
                android:paddingBottom="12dp"
                android:src="@drawable/photo"
                app:layout_constraintBottom_toBottomOf="@id/emojiImgView"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/emojiImgView" />

            <ImageView
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginStart="@dimen/size_medium_16dp"
                android:layout_marginEnd="@dimen/size_medium_16dp"
                android:visibility="gone"
                android:id="@+id/sendMsgImgView"
                android:layout_width="48dp"
                android:layout_height="0dp"
                android:contentDescription="@string/description_send_icon"
                android:paddingLeft="6dp"
                android:paddingTop="6dp"
                android:paddingRight="6dp"
                android:paddingBottom="6dp"
                android:src="@drawable/send"
                app:layout_constraintBottom_toBottomOf="@id/emojiImgView"
                app:layout_constraintLeft_toLeftOf="@id/pictureImgView"
                app:layout_constraintRight_toRightOf="@id/pictureImgView"
                app:layout_constraintTop_toTopOf="@id/emojiImgView" />

            <ImageView
                android:background="?android:attr/selectableItemBackground"
                android:id="@+id/voiceImgView"
                android:layout_width="36dp"
                android:layout_height="0dp"
                android:contentDescription="@string/description_attach_voice_icon"
                android:paddingLeft="6dp"
                android:paddingTop="12dp"
                android:paddingRight="6dp"
                android:paddingBottom="12dp"
                android:src="@drawable/mic"
                app:layout_constraintBottom_toBottomOf="@id/emojiImgView"
                app:layout_constraintRight_toLeftOf="@id/pictureImgView"
                app:layout_constraintTop_toTopOf="@id/emojiImgView" />

            <ImageView
                android:background="?android:attr/selectableItemBackground"
                android:id="@+id/uploadFileImgView"
                android:layout_width="36dp"
                android:layout_height="0dp"
                android:contentDescription="@string/description_attach_file_icon"
                android:paddingLeft="6dp"
                android:paddingTop="12dp"
                android:paddingRight="6dp"
                android:paddingBottom="12dp"
                android:src="@drawable/attach_file"
                app:layout_constraintBottom_toBottomOf="@id/emojiImgView"
                app:layout_constraintRight_toLeftOf="@id/voiceImgView"
                app:layout_constraintTop_toTopOf="@id/emojiImgView" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:visibility="gone"/>
</LinearLayout>