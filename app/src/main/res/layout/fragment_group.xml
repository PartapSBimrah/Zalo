<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:descendantFocusability="blocksDescendants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/createNewGroupLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/addGroupImgView"
                android:layout_width="@dimen/size_huge_48dp"
                android:layout_height="@dimen/size_huge_48dp"
                android:layout_marginStart="@dimen/size_medium_16dp"
                android:layout_marginTop="@dimen/size_small_8dp"
                android:layout_marginBottom="@dimen/size_small_8dp"
                android:src="@drawable/add" />

            <TextView
                android:id="@+id/addGroupDescTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/size_small_8dp"
                android:text="@string/description_create_group" />
        </LinearLayout>

        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_small_8dp"
            android:background="@color/colorDividerBg"
            app:layout_constraintTop_toBottomOf="@id/createNewGroupLayout" />

        <TextView
            android:id="@+id/createGroupDescTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_medium_16dp"
            android:layout_marginTop="@dimen/size_small_8dp"
            android:text="@string/label_add_group"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider1" />

        <ImageButton
            android:id="@+id/remindDateImgButton"
            android:layout_width="@dimen/size_huge_48dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/size_small_8dp"
            android:background="@drawable/remind_date"
            android:contentDescription="@string/description_remind_date"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="@id/remindDateTV"
            app:layout_constraintStart_toStartOf="@id/remindDateTV"
            app:layout_constraintTop_toBottomOf="@id/createGroupDescTV" />

        <TextView
            android:id="@+id/remindDateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_medium_16dp"
            android:layout_marginTop="@dimen/size_small_8dp"
            android:text="@string/description_remind_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/remindDateImgButton" />

        <ImageButton
            android:id="@+id/voteImgButton"
            android:layout_width="@dimen/size_huge_48dp"
            android:layout_height="0dp"
            android:background="@drawable/vote"
            android:contentDescription="@string/description_remind_date"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="@id/voteTV"
            app:layout_constraintStart_toStartOf="@id/voteTV"
            app:layout_constraintTop_toTopOf="@id/remindDateImgButton" />

        <TextView
            android:id="@+id/voteTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_large_24dp"
            android:layout_marginTop="@dimen/size_small_8dp"
            android:text="@string/description_vote"
            app:layout_constraintStart_toEndOf="@id/remindDateTV"
            app:layout_constraintTop_toBottomOf="@id/voteImgButton" />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_small_8dp"
            android:layout_marginTop="@dimen/size_small_8dp"
            android:background="@color/colorDividerBg"
            app:layout_constraintTop_toBottomOf="@id/remindDateTV" />

        <TextView
            android:id="@+id/joinedGroupsTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_medium_16dp"
            android:layout_marginTop="@dimen/size_small_8dp"
            android:text="@string/label_joined_groups"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider2" />

        <Spinner
            android:id="@+id/sortGroupSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_small_8dp"
            android:layout_marginEnd="@dimen/size_medium_16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider2" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_medium_16dp"
            app:layout_constraintTop_toBottomOf="@id/joinedGroupsTV" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>