<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/videoMessageLayout"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:visibility="gone"
    app:cardCornerRadius="@dimen/sizeRoundCornerMessageBg"
    tools:layout_height="350dp"
    tools:layout_width="200dp"
    tools:visibility="visible">

    <ImageView
        android:contentDescription="@string/description_video"
        android:background="@color/strongGray"
        android:id="@+id/videoThumbImgView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:paddingHorizontal="6dp"
        android:paddingVertical="1dp"
        android:layout_margin="2dp"
        android:id="@+id/videoDurationTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_date_bg"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sizeTextSmall"
        tools:text="00:39" />

    <ProgressBar
        android:layout_marginBottom="4dp"
        android:id="@+id/uploadVideoProgressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:visibility="gone"
        tools:progress="50"
        tools:visibility="visible" />

    <ImageView
        app:tint="@color/whiteTransparent2"
        android:src="@drawable/ic_play_arrow_black_24dp"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center"/>
</androidx.cardview.widget.CardView>