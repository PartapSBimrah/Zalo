<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vng.zalo.tdtai.zalo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.USE_SIP" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>

    <uses-feature android:name="android.hardware.sip.voip" />
    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:name=".ZaloApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/label_app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Light"
        android:windowSoftInputMode="adjustResize">
        <activity
            android:screenOrientation="portrait"
            android:name=".views.activities.CallActivity"
            android:theme="@style/AppTheme.Light.NoActionBar"/>

        <service
            android:name=".services.NotificationService"
            android:enabled="true"
            android:exported="true"
            android:stopWithTask="false" />

        <activity android:name=".views.activities.RegisterActivity" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="vng.zalo.tdtai.zalo.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity
            android:name=".views.activities.CreateGroupActivity"
            android:label="@string/description_create_group"
            android:theme="@style/AppTheme.Light.NoActionBar" />
        <activity
            android:name=".views.activities.SplashActivity"
            android:theme="@style/AppTheme.SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.activities.RoomActivity"
            android:theme="@style/AppTheme.Light.NoActionBar" />
        <activity
            android:name=".views.activities.HomeActivity"
            android:theme="@style/AppTheme.Light.NoActionBar" />
        <activity
            android:name=".views.activities.LoginActivity"
            android:parentActivityName=".views.activities.IntroActivity"
            android:theme="@style/AppTheme.Light.NoActionBar" />
        <activity
            android:launchMode="singleTop"
            android:name=".views.activities.IntroActivity"
            android:theme="@style/AppTheme.Light.NoActionBar" />
    </application>

</manifest>